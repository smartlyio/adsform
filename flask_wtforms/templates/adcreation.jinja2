              </ul>
          {% endif %}
        </fieldset>

        <fieldset class="form-field">{{ form.adname.label }} {{ form.adname(size=50) }}
          {% if form.adname.errors %}
            <ul class="errors">
                {% for error in form.adname.errors %}
